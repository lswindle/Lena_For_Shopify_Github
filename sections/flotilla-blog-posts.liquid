        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    }
  ],
  "blocks": [
    {
      "type": "blog",
      "name": "Selected blog",
      "settings": [
        {
          "type": "paragraph",
          "content": "Choose the blog you want to feature"
        },
        {
          "type": "blog",
          "id": "blog",
          "label": "Blog"
        }
      ]
    },
    {
      "type": "blog_posts",
      "name": "Selected blog posts",
      "settings": [
        {
          "type": "paragraph",
          "content": "Choose the blog posts you want to feature"
        },
        {
          "type": "article",
          "id": "article_1",
          "label": "First blog post"
        },
        {
          "type": "article",
          "id": "article_2",
          "label": "Second blog post"
        },
        {
          "type": "article",
          "id": "article_3",
          "label": "Third blog post"
        },
        {
          "type": "article",
          "id": "article_4",
          "label": "Fourth blog post"
        }
      ]
    }
  ],
  "max_blocks": 1,
  "presets": [
    {
      "name": "Blog posts",
      "blocks": [
        {
          "type": "blog",
          "settings": {
            "blog": "News"
          }
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.overlay"
    ]
  }
}
{% endschema %}
