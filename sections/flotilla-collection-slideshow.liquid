{%- liquid
  if section.blocks.size > section.settings.visible_collections_desktop
    assign enable_slider = true
  else
    assign enable_slider = false
    case section.blocks.size
      when 2
          assign slide_width_class = ' md:w-1/2'
      when 3
          assign slide_width_class = ' md:w-1/3'
      when 4
          assign slide_width_class = ' md:w-1/4'
      when 5
          assign slide_width_class = ' md:w-1/5'
    endcase
  endif
-%}
<div data-color-scheme={{ section.settings.section_color_scheme }}>
  <section class="text-body bg-page pb-3 md:p-6">
    {% if section.settings.subheading != blank or section.settings.heading != blank %}
      <div class="px-4 pt-5 pb-4 md:p-0{% if section.settings.text_alignment == 'center' %} text-center{% elsif section.settings.text_alignment == 'right' %} text-right{% endif %}">
        {% if section.settings.subheading != blank %}
          {% render 'armament-heading' with tag: 'h4', heading_content: section.settings.subheading, heading_type: 'heading-4', classes: 'mb-2 md:mb-3' %}
        {% endif %}
        {% if section.settings.heading != blank %}
          {% render 'armament-heading' with tag: 'h2', heading_content: section.settings.heading, heading_type: 'section-heading', classes: 'md:mb-5' %}
        {% endif %}
      </div>
    {% endif %}
    {% if section.blocks.size > 1 %}
      <slider-engine
        mode="horizontal"
        arrows="true"
        blocks="true"
        mobile-indicator="true"
        visible-slides='{ "sm": {{ section.settings.visible_collections_mobile }}, "md": {{ section.settings.visible_collections_desktop }} }'
        class="block relative"
        tabindex="0"
        data-name="scrollbar-target"
      >
        <div
          class="relative overflow-hidden"
          data-name="slider-wrap"
        >
          <ul
            data-name="slider"
            class="flex{% unless enable_slider %} collection-slideshow-container{% endunless %}"
            role="list"
          >
            {% for block in section.blocks %}
              <li data-name="slide" class="relative flex place-content-center {{ slide_width_class }}" data-block-id="{{ block.id }}">
                <div class="w-full md:mr-1{% if section.settings.visible_collections_mobile == '2' %} mr-1{% endif %}{% if block.settings.button_label == blank %} pointer-events-none md:pointer-events-auto{% endif %}">
                  {% assign collection_heading = block.settings.collection_heading | default: block.settings.collection.title %}
                  {% if section.settings.visible_collections_mobile == '2' %}
                    {% assign mobile_center_align = true %}
                  {% endif %}
                  {% render 'ship-visual-card' with
                    card_image: block.settings.collection.featured_image,
                    card_text: collection_heading,
                    button_label: block.settings.button_label,
                    button_style: section.settings.button_style,
                    url: block.settings.collection.url,
                    overlay_color_scheme: block.settings.text_overlay_color_scheme,
                    horizontal_alignment: block.settings.horizontal_text_alignment,
                    mobile_center_align: mobile_center_align,
                    vertical_alignment: block.settings.vertical_text_alignment,
                    overlay_style: block.settings.overlay_color_scheme,
                    overlay_opacity: block.settings.overlay_opacity,
                    shopify_attributes: block.shopify_attributes
                    placeholder: 'collection-1'
                  %}
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>

        <template>
          {% if enable_slider == false %}
            {% assign arrow_classes = 'md:hidden' %}
          {% endif %}
          {% render 'armament-slider-arrows' with hide_on_mobile: true, classes: arrow_classes %}
          <div data-name="mobile-indicator" class="block md:hidden">
            {% render 'armament-scroll-bar' with classes: 'p-4', item_count: section.blocks.size, parent: 'slider-engine', target: 'slider', indicator: 'progress' %}
          </div>
        </template>
      </slider-engine>
      <safe-load-scripts>
        <script src="{{ 'engine-slider.min.js' | asset_url }}" defer="defer" type="module" data-armada-load-key="slider-engine"></script>
      </safe-load-scripts>
    {% else %}
      {% assign block = section.blocks[0] %}
      {% assign collection_heading = block.settings.collection_heading | default: block.settings.collection.title %}
      {% render 'ship-visual-card' with
        card_image: block.settings.collection.featured_image,
        card_text: collection_heading,
        button_label: block.settings.button_label,
        button_style: section.settings.button_style,
        url: block.settings.collection.url,
        overlay_color_scheme: section.settings.text_overlay_color_scheme,
        horizontal_alignment: section.settings.horizontal_text_alignment,
        vertical_alignment: section.settings.vertical_text_alignment,
        overlay_style: section.settings.overlay_color_scheme,
        overlay_opacity: section.settings.overlay_opacity,
        placeholder: 'collection-1',
        shopify_attributes: block.shopify_attributes
      %}
    {% endif %}
  </section>
</div>


{% schema %}
{
  "class": "w-full",
  "name": "Collection slideshow",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Boost discoverability"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collection slideshow"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "visible_collections_desktop",
      "label": "Collections per row (desktop)",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "radio",
      "id": "visible_collections_mobile",
      "label": "Collections per row (mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Color scheme"
    },
    {
      "type": "select",
      "id": "section_color_scheme",
      "label": "Background color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "collection_heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "vertical_text_alignment",
          "label": "Vertical text position",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "default": "bottom"
        },
        {
          "type": "select",
          "id": "horizontal_text_alignment",
          "label": "Horizontal text position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "radio",
          "id": "button_style",
          "label": "Button style",
          "options": [
            {
              "value": "filled",
              "label": "Filled"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ],
          "default": "filled"
        },
        {
          "type": "header",
          "content": "Color scheme"
        },
        {
          "type": "select",
          "id": "text_overlay_color_scheme",
          "label": "Text overlay color scheme",
          "options": [
            {
              "value": "general",
              "label": "General"
            },
            {
              "value": "accent-1",
              "label": "Accent 1"
            },
            {
              "value": "accent-2",
              "label": "Accent 2"
            },
            {
              "value": "accent-3",
              "label": "Accent 3"
            }
          ],
          "default": "accent-1"
        },
        {
          "type": "select",
          "id": "overlay_color_scheme",
          "label": "Overlay color scheme",
          "options": [
            {
              "value": "bg-white",
              "label": "Light"
            },
            {
              "value": "bg-black",
              "label": "Dark"
            }
          ],
          "default": "bg-black"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay opacity",
          "unit": "%",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 20
        }
      ]
    }
  ],
  "max_blocks": 16,
  "presets": [
    {
      "name": "Collection slideshow",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.overlay"
    ]
  }
}
{% endschema %}
