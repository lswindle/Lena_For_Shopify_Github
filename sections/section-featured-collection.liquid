<section class="bg-page text-body py-5 md:py-6" data-color-scheme="{{ section.settings.color_scheme }}" data-aid="featured-collection">
    {% if section.settings.subheading != blank or section.settings.heading != blank %}
        <div class="{{ section.settings.alignment }} mb-4 md:mb-5 px-4 md:px-6" data-aid="featured-collection-header">
            {% if section.settings.subheading != blank %}
                {% render 'armament-heading' with tag: 'h4', heading_content: section.settings.subheading, heading_type: 'heading-4', classes: 'mb-2 md:mb-3' %}
            {% endif %}
            {% if section.settings.heading != blank %}
                {% render 'armament-heading' with tag: 'h2', heading_content: section.settings.heading, heading_type: 'section-heading' %}
            {% endif %}
        </div>
    {% endif %}

    {% if section.settings.collection != blank %}
        <div data-aid="featured-collection-grid">
            {% render 'flotilla-collection-grid' with
            collection: section.settings.collection,
            products_per_row: section.settings.products_per_row,
            products_per_row_mobile: section.settings.products_per_row_mobile,
            products_per_page: section.settings.products_per_page,
            has_pagination: false,
            enable_filtering: false,
            enable_sorting: false,
            grid_container_classes: 'pt-0 pb-0 lg:pb-0' %}
        </div>
    {% else %}
        {% if settings.enable_animations %}
        <loadin-animation>
        {% endif %}
        <ul class="flex flex-wrap md:flex-nowrap max-w-[768px] md:max-w-none px-0 lg:px-6 gap-10 -mr-10 md:mr-0" data-aid="featured-collection-grid-placeholder">
            {% for i in (1..4) %}
                <li loadin-animation-elm loadin-animation-delay class="md:flex-1 w-[calc(50%-10px)] md:w-full flex flex-col">
                    {% assign placeholder = 'product-' | append: forloop.index %}
                    {% render 'armament-placeholder' with name: placeholder %}
                    <div class="text-{{ settings.product_info_position }} px-3 pt-2">
                        {% render 'armament-heading' with tag: 'h5', heading_content: 'Example product title' %}
                        <span>{{ 1999 | money }}</span>
                    </div>
                </li>
            {% endfor %}
        </ul>
        {% if settings.enable_animations %}
        </loadin-animation>

        <safe-load-scripts class="hidden">
            <script src="{{ 'engine-loadin-animation.min.js' | asset_url }}" defer="defer" type="module" data-armada-load-key="loadin-animation"></script>
        </safe-load-scripts>
        {% endif %}
    {% endif %}
</section>


{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Show off your products"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured collection"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-left"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 2,
      "max": 30,
      "step": 1,
      "label": "Products to show",
      "default": 4
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products per row (desktop)",
      "default": 4
    },
    {
      "type": "radio",
      "id": "products_per_row_mobile",
      "label": "Products per row (mobile)",
      "options": [
        {
          "value": "1",
          "label": "One"
        },
        {
          "value": "2",
          "label": "Two"
        }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Color scheme"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "settings": {
      }
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.overlay"
    ]
  }
}
{% endschema %}
