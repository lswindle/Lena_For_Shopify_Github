{%-liquid
  if section.settings.bg_color_scheme == section.settings.card_color_scheme
    assign border = true
  endif

  assign no_heading = true
-%}

{% if section.settings.subheading != blank or section.settings.heading != blank %}
  {% assign no_heading = false %}
  <div
    class="bg-page text-body px-4 pb-4 pt-5 md:px-6 md:pb-5 md:pt-6 md:w-full text-center"
    data-color-scheme="{{ section.settings.bg_color_scheme }}"
  >
    {% if section.settings.subheading != blank %}
      {% render 'armament-heading' with tag: 'h4', heading_content: section.settings.subheading, heading_type: 'heading-4', classes: 'mb-2 md:mb-3', data_aid: 'blog-posts-subheading' %}
    {% endif %}
    {% if section.settings.heading != blank %}
      {% render 'armament-heading' with tag: 'h2', heading_content: section.settings.heading, heading_type: 'section-heading', data_aid: 'blog-posts-subheading' %}
    {% endif %}
  </div>
{% endif %}

<section
  class="bg-page w-full px-0 {% if no_heading %}pt-3 md:p-6{% else %}md:pb-6 md:px-6{% endif %} flex flex-col md:flex-row"
  data-aid="accordion-with-image"
  data-color-scheme="{{ section.settings.bg_color_scheme }}"
>
  <div
    data-aid="accordion-items"
    class="p-4 md:p-0 w-full md:w-4/6"
  >
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% if forloop.first %}
          {% assign summary_class = "pt-0 md:pt-0" %}
        {% else %}
          {% assign summary_class = "" %}
        {% endif %}
        {% render 'armament-accordion' with details_class: 'text-body', summary_class: summary_class, summary_header: block.settings.accordion_item_header, summary_content: block.settings.accordion_item_content, prose: true, shopify_attributes: block.shopify_attributes, block_id: block.id %}
      {% endfor %}
    {% else %}
      <p
      class="p-3 md:py-4 text-center text-body"
      data-aid="accordion-with-image-onboarding-text"
      >{{ 'general.onboarding.no_content' | t }}</p>
    {% endif %}
  </div>

  <div
    data-aid="image-and-text-card-wrapper"
    data-color-scheme="{{ section.settings.card_color_scheme }}"
    class="md:ml-5 w-full md:w-2/6"
  >
    {%- liquid
      assign placeholder = false
      if section.settings.accordion_card_image == blank
        assign placeholder = true
      endif
    -%}
    {% render 'ship-image-and-text-card' with
      placeholder_image: placeholder,
      image: section.settings.accordion_card_image,
      image_size: section.settings.image_size,
      heading: section.settings.card_heading,
      text: section.settings.card_text,
      url: section.settings.link,
      button_label: section.settings.button_text,
      button_style: section.settings.button_style,
      text_alignment: section.settings.text_alignment,
      classes: 'h-auto',
      prose: true,
      border: border
    %}
  </div>
</section>


{% schema %}
