{%- capture get_blocks -%}
  {%- for block in section.blocks -%}
    {%- if block.type == '@app' -%}
      {{ block.type | append: "-" | append: block.id | lstrip }}{%- unless forloop.last -%},{%- endunless -%}
    {%- else -%}
      {{ block.type | lstrip }}{%- unless forloop.last -%},{%- endunless -%}
    {%- endif -%}
  {%- endfor -%}
{%- endcapture -%}

{% assign block_order = get_blocks | join: ',' | lstrip | strip %}

<div class="w-full text-body bg-page py-5 px-4 lg:p-5">
  {% unless settings.show_smart_checkout %}
    {% assign button_wrapper_classes = 'mb-4' %}
  {% endunless %}
  {% render 'ship-product-form' with form_product: product, dynamic_buttons: settings.show_smart_checkout, block_order: block_order, option_classes: 'flex flex-col', select_wrapper_classes: 'w-full mb-3 md:mb-4' button_style: 'outline', button_wrapper_classes: button_wrapper_classes, price_classes: 'mb-3 md:mb-4', regular_price_classes: 'text-h4 font-heading heading-case leading-none' %}
</div>

{% if settings.product_form_sticky %}
  <div
    data-armada-selector="sticky-atc-form-wrapper"
    class="max-w-full"
  >
    {% render 'ship-product-form-sticky' with sticky_product: product, dynamic_buttons: false, section_id: section.id %}
  </div>
{% endif %}

