<section data-color-scheme="{{ section.settings.section_color_scheme }}" class="bg-page text-body">
  {% if section.settings.blog_navigation != blank %}
    <div class="px-3 md:px-4 lg:px-6 py-4">
      {% render 'armament-navigation-banner' with nav_item: section.settings.blog_navigation.links, container_classes: 'justify-center flex-wrap' %}
    </div>
  {% elsif section.settings.blog_navigation == blank and request.design_mode %}
    <div class="px-3 md:px-4 lg:px-6 py-4">
      <p class="text-center">Create a navigation and add it to the section to enable navigation between various blogs.</p>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Blog navigation",
  "settings": [
    {
      "type": "link_list",
      "id": "blog_navigation",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "Color scheme"
    },
    {
      "type": "select",
      "id": "section_color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    }
  ],
  "presets": [
    {
      "name": "Blog navigation",
      "settings": {
      },
      "blocks": [

      ]
    }
  ],
  "enabled_on": {
    "templates": [
      "blog"
    ]
  }
}
{% endschema %}