{%- liquid
  if section.settings.visible_columns >= section.blocks.size
    case section.blocks.size
      when 1
        assign grid_classes = 'md:grid md:grid-cols-1'
      when 2
        assign grid_classes = 'md:grid md:grid-cols-2'
      when 3
        assign grid_classes = 'md:grid md:grid-cols-3'
      when 4
        assign grid_classes = 'md:grid md:grid-cols-4'
    endcase
    assign arrow_class = 'md:hidden'
  endif

  assign visible_cols = section.settings.visible_columns

  assign init_slide_width = 100.0 | divided_by: visible_cols | append: '%'

  if section.settings.bg_color_scheme == section.settings.content_color_scheme
    assign border = true
  endif
-%}

<style>
  .text-columns-slider--{{ section.id }} li[data-name="slide"] {
    min-width: 50%;
  }

  @media screen and (min-width: 769px) {
    .text-columns-slider--{{ section.id }} li[data-name="slide"] {
      min-width: {{ init_slide_width }};
    }
  }
</style>

<section data-color-scheme={{ section.settings.bg_color_scheme }} data-aid="text-columns-with-images">
{% if settings.enable_animations %}
<loadin-animation>
{% endif %}

  <div class="text-body bg-page pt-5 pb-3 px-4 md:p-6">
    {% if section.settings.subheading != blank or section.settings.heading != blank %}
      <div class="pb-4 px-4 md:px-6 md:pb-5 text-center">
        {% if section.settings.subheading != blank %}
          {% render 'armament-heading' with tag: 'h4', heading_content: section.settings.subheading, heading_type: 'heading-4', classes: 'mb-2 md:mb-3' %}
        {% endif %}
        {% if section.settings.heading != blank %}
          {% render 'armament-heading' with tag: 'h2', heading_content: section.settings.heading, heading_type: 'section-heading' %}
        {% endif %}
      </div>
    {% endif %}

    <slider-engine
      mode="horizontal"
      arrows="true"
      blocks="true"
      mobile-indicator="true"
      visible-slides='{ "sm": 1, "md": {{ section.settings.visible_columns }} }'
      class="block group relative text-columns-slider--{{ section.id }}"
      tabindex="0"
      data-name="scrollbar-target"
    >
      <div
        class="relative overflow-hidden"
        data-name="slider-wrap"
      >
        <ul
          data-name="slider"
          class="flex {{ grid_classes }}"
          role="list"
        >
          {% for block in section.blocks %}
            <li loadin-animation-elm loadin-animation-delay data-name="slide" class="relative flex place-content-center" data-color-scheme={{ section.settings.content_color_scheme }} {{ block.shopify_attributes }} data-block-id="{{ block.id }}">
              <div class="w-full md:mr-1">
                {% render 'ship-image-and-text-card' with
                  image: block.settings.image,
                  image_size: section.settings.image_size,
                  text_alignment: section.settings.text_alignment,
                  placeholder_image: true,
                  heading: block.settings.heading,
                  text: block.settings.text,
                  url: block.settings.link,
                  button_label: block.settings.button_text,
                  button_style: block.settings.button_style,
                  border: border
                %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

      <template>
        {% capture svg_colors %}data-color-scheme="{{ section.settings.bg_color_scheme }}"{% endcapture %}
        {% render 'armament-slider-arrows' with hide_on_mobile: true, classes: arrow_class, border: border, attributes: svg_colors %}
        <div data-name="mobile-indicator" class="block md:hidden">
          {% render 'armament-scroll-bar' with classes: 'py-4', item_count: section.blocks.size, parent: 'slider-engine', target: 'slider', indicator: 'progress' %}
        </div>
      </template>
    </slider-engine>

    <safe-load-scripts>
      <script src="{{ 'engine-slider.min.js' | asset_url }}" defer="defer" type="module" data-armada-load-key="engine-slider"></script>
    </safe-load-scripts>
  </div>

{% if settings.enable_animations %}
</loadin-animation>

<safe-load-scripts class="hidden">
  <script src="{{ 'engine-loadin-animation.min.js' | asset_url }}" defer="defer" type="module" data-armada-load-key="loadin-animation"></script>
</safe-load-scripts>
{% endif %}
</section>

{% schema %}
{
  "name": "Text columns with images",
  "class": "w-full",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Emphasise your messaging"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Text columns with image"
    },
    {
      "type": "range",
      "id": "visible_columns",
      "label": "Columns per row (desktop)",
      "min": 2,
      "max": 4,
      "default": 3
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "landscape",
          "label": "Landscape (4:3)"
        },
        {
          "value": "portrait",
          "label": "Portrait (2:3)"
        },
        {
          "value": "square",
          "label": "Square (1:1)"
        }
      ],
      "default": "square"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Color scheme"
    },
    {
      "type": "select",
      "id": "bg_color_scheme",
      "label": "Background color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    },
    {
      "type": "select",
      "id": "content_color_scheme",
      "label": "Card color scheme",
      "options": [
        {
          "value": "general",
          "label": "General"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "accent-3",
          "label": "Accent 3"
        }
      ],
      "default": "general"
    }
  ],
  "max_blocks": 6,
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Body text",
          "default": "Use text paired with images to create a captivating brand story, explain details of your products, or highlight store promotions."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button label"
        },
        {
          "type": "radio",
          "id": "button_style",
          "label": "Button style",
          "options": [
            {
              "value": "filled",
              "label": "Filled"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ],
          "default": "filled"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text columns with images",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "custom.overlay"
    ]
  }
}
{% endschema %}
